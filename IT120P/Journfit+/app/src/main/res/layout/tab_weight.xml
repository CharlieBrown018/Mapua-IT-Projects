<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#414141">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:name="tab_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#414141"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:textColor="#F85757">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    app:cardBackgroundColor="#414141"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CardViewTitle"
                            android:text="@string/weightLabel" />

                        <TextView
                            android:id="@+id/weightInput"
                            style="@style/PrimaryWeightMeasure"
                            android:text=" - "
                            android:textColor="#F8E286"
                            android:title="@string/weightLabel"
                            tools:text="70.5" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/weightGraph"
                            style="@style/MiniLineChart"
                            android:clickable="true"
                            android:focusable="true" />

                        <Button
                            android:id="@+id/weightDetailsButton"
                            style="@style/Widget.AppCompat.Button.Borderless.DetailsButton"
                            android:drawableStart="@drawable/ic_list_alt"
                            android:text="@string/details"
                            android:textColor="#FFFFFF" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    app:cardBackgroundColor="#414141"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CardViewTitle"
                            android:text="@string/fatLabel" />

                        <TextView
                            android:id="@+id/fatInput"
                            style="@style/PrimaryWeightMeasure"
                            android:textColor="#F8E286"
                            android:title="@string/fatLabel"
                            tools:text="50.9" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/fatGraph"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="0dp"
                            android:minHeight="50dp" />

                        <Button
                            android:id="@+id/fatDetailsButton"
                            style="@style/Widget.AppCompat.Button.Borderless.DetailsButton"
                            android:drawableStart="@drawable/ic_list_alt"
                            android:text="@string/details"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    app:cardBackgroundColor="#414141"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CardViewTitle"
                            android:text="@string/musclesLabel" />

                        <TextView
                            android:id="@+id/musclesInput"
                            style="@style/PrimaryWeightMeasure"
                            android:textColor="#F8E286"
                            android:title="@string/musclesLabel"
                            tools:text="20.2" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/musclesGraph"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="5dp"
                            android:minHeight="50dp" />

                        <Button
                            android:id="@+id/musclesDetailsButton"
                            style="@style/Widget.AppCompat.Button.Borderless.DetailsButton"
                            android:drawableStart="@drawable/ic_list_alt"
                            android:text="@string/details"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    app:cardBackgroundColor="#414141"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CardViewTitle"
                            android:text="@string/waterLabel" />

                        <TextView
                            android:id="@+id/waterInput"
                            style="@style/PrimaryWeightMeasure"
                            android:textColor="#F8E286"
                            android:title="@string/waterLabel"
                            tools:text="20.5" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/waterGraph"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="0dp"
                            android:minHeight="50dp" />

                        <Button
                            android:id="@+id/waterDetailsButton"
                            style="@style/Widget.AppCompat.Button.Borderless.DetailsButton"
                            android:drawableStart="@drawable/ic_list_alt"
                            android:text="@string/details"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#414141">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:orientation="horizontal"
                    android:padding="6dip">

                    <TextView
                        style="@style/CardViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="@string/size"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/sizeInput"
                        style="@style/PrimaryWeightMeasure"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:textColor="#F8E286"
                        tools:text="50" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/sizeGraph"
                        style="@style/MiniLineChart"
                        android:layout_width="wrap_content"
                        android:layout_weight="50" />

                    <Button
                        android:id="@+id/sizeDetailsButton"
                        style="@style/Widget.AppCompat.Button.Borderless.DetailsButton"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:drawableTop="@drawable/ic_list_alt"
                        android:text="@string/details"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:layout_weight="50"
                    app:cardBackgroundColor="#414141"
                    app:cardCornerRadius="5dp"
                    app:contentPadding="5dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:shrinkColumns="2"
                        android:stretchColumns="0,1,3">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                style="@style/CardViewTitle"
                                android:layout_marginTop="0dp"
                                android:layout_span="4"
                                android:text="@string/indexLabel"
                                android:textSize="24sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/imcLabel"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/imcValue"
                                style="@style/WeightIndexStyle"
                                android:gravity="center"
                                android:textColor="#F8E286"
                                tools:text="20" />

                            <TextView
                                android:id="@+id/imcViewText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="#696969"
                                android:textSize="20sp"
                                android:textStyle="italic"
                                tools:text="@string/no_size_available" />

                            <ImageButton
                                android:id="@+id/imcHelp"
                                style="@style/InfoButton"
                                app:srcCompat="@drawable/ic_help_outline" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ffmiLabel"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/ffmiValue"
                                style="@style/WeightIndexStyle"
                                android:gravity="center"
                                android:textColor="#F8E286"
                                tools:text="20" />

                            <TextView
                                android:id="@+id/ffmiViewText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="#696969"
                                android:textSize="20sp"
                                android:textStyle="italic"
                                tools:text="@string/no_fat_available" />

                            <ImageButton
                                android:id="@+id/ffmiHelp"
                                style="@style/InfoButton"
                                app:srcCompat="@drawable/ic_help_outline" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bmrLabel"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/bmrValue"
                                style="@style/WeightIndexStyle"
                                android:gravity="center"
                                android:textColor="#F8E286"
                                tools:text="1864" />

                            <TextView
                                android:id="@+id/bmrViewText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textColor="#696969"
                                android:textSize="20sp"
                                android:textStyle="italic"
                                tools:text="normal" />

                            <ImageButton
                                android:id="@+id/bmrHelp"
                                style="@style/InfoButton"
                                app:srcCompat="@drawable/ic_help_outline" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily_calorie_label"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/dailyCalorieValue"
                                style="@style/WeightIndexStyle"
                                android:gravity="center"
                                android:textColor="#F8E286"
                                tools:text="2731" />

                            <Spinner
                                android:id="@+id/activityLevelSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#414141"
                                android:ellipsize="end"
                                android:gravity="center_horizontal"
                                android:popupBackground="#FFFFFF"
                                android:singleLine="true"
                                android:textColor="#FFFFFF" />

                            <ImageButton
                                android:id="@+id/dailyCalorieHelp"
                                style="@style/InfoButton"
                                app:srcCompat="@drawable/ic_help_outline" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            tools:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/rfmLabel"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/rfmValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:maxWidth="100dp"
                                android:maxLines="1"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                tools:text="20" />

                            <TextView
                                android:id="@+id/rfmViewText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:textStyle="italic"
                                tools:text="normal" />

                            <ImageButton
                                android:id="@+id/rfmHelp"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_gravity="center"
                                android:adjustViewBounds="false"
                                android:background="@color/background"
                                android:cropToPadding="false"
                                app:srcCompat="@drawable/ic_help_outline" />

                        </TableRow>

                    </TableLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:layout_weight="50"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:visibility="gone"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- clear space to scroll above the FAB (56dp + 2x 10dp margin) -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="76dp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addAllWeightEntries"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#737373"
        android:contentDescription="@string/AddLabel"
        android:gravity="bottom"
        android:src="@drawable/ic_add_multiple"
        app:borderWidth="0dp"
        app:fabSize="normal" />


</RelativeLayout>
